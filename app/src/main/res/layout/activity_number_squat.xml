<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/skin_topbar_bg_color">
        <ImageView
            android:id="@+id/number_back2"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_arrow_back_ios"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="实时训练"
            android:textColor="@color/skin_text_white"
            android:textSize="18sp" />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="200dp">
        <VideoView
            android:id="@+id/video4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back2"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_5"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/number_logo2"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_alarm_add"
                android:layout_marginLeft="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="60dp" />
            <EditText
                android:id="@+id/select_number2"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:hint="请输入运动个数(秒)"
                android:inputType="number"
                >
            </EditText>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_6"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <Button
                android:id="@+id/train4"
                android:layout_centerInParent="true"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="#009393"
                android:text="开始训练"
                android:textColor="#ffffff"
                android:textSize="16sp"
                >

            </Button>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/squat_number_number"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:text="深蹲个数:"
                android:layout_width="120dp"
                android:textSize="18sp"
                android:layout_height="30dp"
                android:layout_marginStart="90dp" />
            <TextView
                android:id="@+id/number4"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:text="1个"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:layout_marginStart="210dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/running_time2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:text="训练时间："
                android:layout_width="90dp"
                android:textSize="18sp"
                android:layout_height="30dp"
                android:layout_marginStart="120dp" />
            <TextView
                android:id="@+id/time_running2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:text="1秒"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:layout_marginStart="210dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>