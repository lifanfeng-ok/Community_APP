<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".My_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
               android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="19dp">

                <ImageView
                    android:id="@+id/his_header"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/default_bg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp">

                    <TextView
                        android:id="@+id/his_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mike"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/his_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="欢迎大家与我交流"
                        android:textColor="@color/black"
                        android:textSize="11sp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:paddingLeft="19dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/his_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1关注"
                    android:textStyle="bold"
                    android:textColor="#777777"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/his_fan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textStyle="bold"
                    android:text="1粉丝"
                    android:textColor="#777777"
                    android:textSize="13sp"
                    android:layout_marginStart="12dp" />
                <TextView
                    android:id="@+id/his_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="1收藏"
                    android:textStyle="bold"
                    android:textColor="#777777"
                    android:textSize="13sp"
                    android:layout_marginStart="12dp" />

                <TextView
                    android:id="@+id/his_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="1评论 ."
                    android:textStyle="bold"
                    android:textColor="#777777"
                    android:textSize="13sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#f5f5f4" />
    </LinearLayout>

</RelativeLayout>